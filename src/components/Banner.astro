---
import profilePicture from "../images/rafid-muhymin.jpg";
---

<style lang="scss">
  .name {
    background-image: linear-gradient(45deg, #f37335 0%, #fdc830 100%);
    background-clip: text;
    color: transparent;
  }

  @media screen and (max-width: 960px) {
    section > div {
      flex-direction: column-reverse;

      > div {
        width: auto;
      }
    }
  }

  @media screen and (max-width: 360px) {
    section > div > div > div > span:first-of-type {
      display: none;
    }
  }
</style>

<section>
  <div
    class="max-w-[1200px] mx-auto p-8 gap-12 flex justify-evenly items-center"
  >
    <div class="w-1/2 text-center flex flex-col gap-3">
      <div class="text-4xl mb-4 font-extrabold text-slate-900 leading-10">
        <span>Hey, I'm</span>
        <span class="name">Rafid Muhymin Wafi</span>
      </div>
      <div class="text-2xl font-extrabold">Full Stack Engineer</div>
      <div class="text-2xl font-extrabold">in Rangpur, Bangladesh</div>
    </div>

    <img
      width="320"
      src={profilePicture}
      alt="Rafid Muhymin Wafi | Full Stack Engineer"
      class="rounded-full"
    />
  </div>
</section>
